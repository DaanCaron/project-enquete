generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id        Int        @id @default(autoincrement())
  name      String
  questions Question[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  answer     String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}

model Window {
  id         Int       @id @default(autoincrement())
  background String
  buttons    Button[]
  question   Question?  
  text       Text?
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  sequence Int
  surveyId Int
  windowId Int      @unique
  graphStyle String @default("hist")
  answers  Answer[]
  survey   Survey   @relation(fields: [surveyId], references: [id])
  window   Window   @relation(fields: [windowId], references: [id])
}



model Button {
  id       Int    @id @default(autoincrement())
  x        Int
  y        Int
  width    Int
  height   Int
  text     String
  windowId Int
  window   Window @relation(fields: [windowId], references: [id])
}

model Text {
  id       Int    @id @default(autoincrement())
  x        Int
  y        Int
  width    Int
  height   Int
  windowId Int    @unique
  window   Window @relation(fields: [windowId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  password String
}
